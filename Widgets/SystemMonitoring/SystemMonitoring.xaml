<UserControl x:Class="DesktopWidget.Widgets.SystemMonitorWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SystemMonitorControl"
             Width="200" Height="100"
             Background="#AA000000">
    <Border 
        x:Name="SystemMonitorPanel"
        Padding="10"
        Background="#01000000"
        CornerRadius="10"
        IsHitTestVisible="True"
        MouseLeftButtonDown="Panel_MouseLeftButtonDown">
        <StackPanel>
            <TextBlock Text="ðŸ–¥ System Monitor" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="CpuText" Text="CPU: ..." Foreground="White" FontSize="12"/>
            <TextBlock x:Name="RamText" Text="RAM: ..." Foreground="White" FontSize="12"/>
            <TextBlock x:Name="NetText" Text="Net: ..." Foreground="White" FontSize="12"/>
        </StackPanel>
    </Border>
</UserControl>
